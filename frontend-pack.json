            <div className="flex flex-col gap-6 items-start">
              {/* Avatar */}
              <div className="flex items-center space-y-2">
                <div className="w-30 h-30 rounded-full bg-gray-200 border-4 border-blue-600">
                  <img
                    src={profileImage}
