                    </div>
                </div>

                {/* Tabs */}
                <div className="px-6 py-3 border-b border-gray-100">
                    <div className="inline-flex rounded-lg bg-gray-50 p-1">
                        {tabs.map((tab) => (
                            <button
                                key={tab}
