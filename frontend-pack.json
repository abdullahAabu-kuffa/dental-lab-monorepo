  title = "Order Summary",
  subtitle = "Selected services",
  icon,
  selectedItems,
  totalAmount,
  buttonLabel = "Pay Now",
  onAction,
  disabled,
  maxHeight = "max-h-96",
}: PaymentSummaryProps) {
  const isDisabled = disabled || selectedItems.length === 0;

  return (
    <motion.div
      initial={{ opacity: 0, x: 20 }}
      animate={{ opacity: 1, x: 0 }}
      transition={{ delay: 0.2 }}
