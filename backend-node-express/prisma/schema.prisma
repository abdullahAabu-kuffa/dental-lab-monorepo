generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int              @id @default(autoincrement())
  fullName       String?
  email          String           @unique
  password       String
  phoneNumber    String
  clinicName     String
  clinicAddress  String
  role           Role             @default(CLIENT)
  isActive       Boolean          @default(false)
  isVerified     Boolean          @default(false)
  sessions       Session[]
  Security_Token Security_Token[]
  orders         Order[]          @relation("UserOrders")
  approvedOrders Order[]          @relation("ApprovedOrders")
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  invoices       Invoice[]
  auditLogs      AuditLog[]
  notifications  Notification[]
  orderTrackings OrderTracking[]
}

enum Role {
  CLIENT
  OWNER
  ADMIN
}

model Session {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  refreshToken String   @unique
  devices      Json     @default("[]")
  createdAt    DateTime @default(now())
  expiresAt    DateTime
}

model Security_Token {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  isUsed    Boolean  @default(false)
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([userId])
}

model Order {
  id             Int             @id @default(autoincrement())
  userId         Int
  user           User            @relation("UserOrders", fields: [userId], references: [id], onDelete: Cascade)
  fileId         Int?            @unique
  file           File?           @relation(fields: [fileId], references: [id])
  status         ProcessStatus   @default(PENDING)
  invoiceId      Int?
  invoice        Invoice?        @relation("InvoiceOrders", fields: [invoiceId], references: [id])
  options        Json
  totalPrice     Int
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  approvedBy     Int?
  approvedByUser User?           @relation("ApprovedOrders", fields: [approvedBy], references: [id])
  rejectReasons  String?
  orderTrackings OrderTracking[]

  @@index([userId])
  @@index([invoiceId])
  @@index([approvedBy])
}

model OrderTracking {
  id        Int            @id @default(autoincrement())
  orderId   Int
  order     Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  process   String
  status    TrackingStatus @default(PENDING)
  stepOrder Int
  actorId   Int
  actor     User           @relation(fields: [actorId], references: [id])
  startDate DateTime?
  endDate   DateTime?
  note      String?
  createdAt DateTime       @default(now())

  @@index([orderId])
  @@index([orderId, createdAt])
}

enum TrackingStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum ProcessStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model Invoice {
  id         Int           @id @default(autoincrement())
  clientId   Int
  client     User          @relation(fields: [clientId], references: [id])
  orders     Order[]       @relation("InvoiceOrders")
  totalPrice Int
  isSummary  Boolean       @default(false)
  status     PaymentStatus @default(PENDING)
  dueDate    DateTime
  paidAt     DateTime?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@index([clientId])
  @@index([status])
}

enum PaymentStatus {
  PENDING
  PAID
  PARTIAL
}

model File {
  id Int @id @default(autoincrement())

  // B2 identifiers
  b2FileId   String
  b2FileName String

  // File metadata
  originalName String
  fileSize     Int
  fileType     String

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to Order (back-relation)
  order Order?
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  model     String
  recordId  Int
  oldData   Json?
  newData   Json?
  createdAt DateTime @default(now())
}

model Notification {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  // Notification metadata
  type    NotificationType
  title   String
  message String

  // Flexible data storage for different notification types
  data Json? @default("{}")

  // Status tracking
  isRead      Boolean   @default(false)
  readAt      DateTime?
  emailSent   Boolean   @default(false)
  emailSentAt DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes for query performance
  @@index([userId, createdAt])
  @@index([userId, isRead])
}

enum NotificationType {
  WELCOME
  ACCOUNT_ACTIVATED
  PASSWORD_RESET
  UPLOAD_SUCCESS
  UPLOAD_FAILED
  APPROVAL_PENDING
  APPROVED
  REJECTED
  FILE_APPROVED
  FILE_REJECTED
  ORDER_CREATED
  ORDER_UPDATED
  ORDER_CANCELLED
  INFO
  WARNING
  ERROR
}
